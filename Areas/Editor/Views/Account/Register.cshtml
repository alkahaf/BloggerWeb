@model BloggerWeb.Models.RegisterViewModel

@{
    ViewBag.Title = "Editor Registration";
}

<h2>Editor Registration</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form method="post" asp-action="Register">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="FullName" class="form-label">Full Name</label>
        <input type="text" class="form-control" asp-for="FullName" required />
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email" required />
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label">Password</label>
        <input type="password" class="form-control" asp-for="Password" required />
    </div>

    <button type="submit" class="btn btn-success">Register</button>

    <p class="mt-3">Already have an account? <a href="@Url.Action("Login")">Login here</a></p>
</form>
